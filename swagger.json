{
  "openapi": "3.0.0",
  "info": {
    "title": "API Users",
    "description": "Criação de usuários",
    "contact": {
      "name": "André Torquato",
      "email": "ats.torquato1@gmail.com"
    },
    "version": "3.0.0"
  },
  "tags": [{ "name": "users", "description": "Gerenciamento de usuários" }],

  "paths": {
    "/users": {
      "post": {
        "tags": ["users"],
        "summary": "Criar um novo usuário",
        "description": "Criar um novo usuário",
        "requestBody": {
          "description": "Campos obrigatórios para a de um usuário.",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string",
                    "format": "email"
                  }
                }
              },
              "example": {
                "name": "André T.",
                "email": "ats.torquato1@gmail.com"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Operação realizada com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "boolean"
                    },
                    "name": {
                      "type": "string",
                      "example": "André T."
                    },
                    "email": {
                      "type": "string",
                      "example": "ats.torquato1@gmail.com"
                    },
                    "created_at": {
                      "type": "string",
                      "example": "2021-09-04T19:51:35.207Z"
                    },
                    "updated_at": {
                      "type": "string",
                      "example": "2021-09-04T19:51:35.207Z"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Email já está sendo utilizado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "This email already in use."
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["users"],
        "summary": "Retornar todos os usuários",
        "description": "Somente usuário `admin` pode acessar.",
        "parameters": [
          {
            "name": "user_id",
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "in": "header",
            "required": true,
            "allowEmptyValue": false,
            "style": "header -simple"
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "format": "uuid"
                      },
                      "name": {
                        "type": "string",
                        "example": "André Torquato"
                      },
                      "email": {
                        "type": "string",
                        "format": "email"
                      },
                      "admin": {
                        "type": "boolean"
                      },
                      "created_at": {
                        "type": "string",
                        "format": "date-time"
                      },
                      "updated_at": {
                        "type": "string",
                        "format": "date-time"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Usuário sem permissão ou Usuário não encontrado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "You need to be permission an administrator to list all users."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": ["users"],
        "summary": "Retornar um usuário especifico.",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "description": "ID do usuário.",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "format": "uuid"
                      },
                      "name": {
                        "type": "string",
                        "example": "André Torquato"
                      },
                      "email": {
                        "type": "string",
                        "format": "email"
                      },
                      "admin": {
                        "type": "boolean"
                      },
                      "created_at": {
                        "type": "string",
                        "format": "date-time"
                      },
                      "updated_at": {
                        "type": "string",
                        "format": "date-time"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "User not found."
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
